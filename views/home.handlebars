<!---------------------------------------------------Weather-->
<div class="ml-2 sm:ml-0 col-start-1 my-4 px-4 md:my-8 md:px-8">
    <div class="w-72 hidden lg:flow-root">
        <h1 class="pb-2 font-bold text-white text-base md:text-2xl">Weather</h1>
        <div class="flex bg-white mt-2 px-6 pb-4 rounded-lg shadow-md">
            <div class="-ml-4 md:min-w-lg">
                <!---------Weather icon and City-->
                <div class="flex mt-6">
                    <img id="weather-img" src=""></h3>
                    <p class="text-sm md:text-lg text-gray-700 mx-1">
                        City:  
                        
                        <span id="current-city" class="text-gray-700 text-sm font-light"></span>
                    </p>
                </div>
                <!-------------------Temperature-->
                <div class="flex mt-6">
                    <p class="text-sm md:text-lg text-gray-700 mx-1">
                        Temperature:
                        <span id="temperature" class="text-gray-700 text-sm font-light"></span>
                    </p>
                </div>
                <!--------------------Humidity--->
                <div class="flex mt-6">
                    <p class="text-sm md:text-lg text-gray-700 mx-1">
                        Humidity:
                        <span id="humidity" class="text-gray-700 text-sm font-light"></span>
                    </p>
                </div>
                <!--------------------Windspeed-->
                <div class="flex mt-6">
                    <p class="text-sm md:text-lg text-gray-700 mx-1">
                        Windspeed:
                        <span id="windspeed" class="text-gray-700 text-sm font-light"></span>
                    </p>
                </div>
                <!--------------------Weather Input-->
                <div class="flex justify-between mt-6">
                    <input class="text-gray-700 text-sm font-light" id="city-name" placeholder="Enter a City"></input>
                    <button
                        class="px-2 py-1 bg-gray-600 text-sm md:text-lg text-gray-100 font-bold rounded hover:bg-gray-500"
                        id="weatherSearch">Search</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-start-1 my-1 md:my-8">

        <div class="flex grid grid-rows-3 grid-flow-col gap-0">
            <div class=" mx-0 w-4/12 absolute fixed top-50 left-0 hidden lg:block px-6 py-8">

                <div class="pt-2 px-2 py-10">
                    <div class="container mx-auto">
                        <div class="w-1/2">
                            <div class=" flex items-center justify-self-center">
                                <button id="gifbtn"
                                    class="block w-full py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-yellow-700 rounded shadow ripple hover:shadow-lg hover:bg-blue-900 focus:outline-none">
                                    Gif
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="">
                    <div id="gifResults"></div>
                </div>
            </div>
        </div>
    </div>
</div>





<!----------------------------------------------------------Moments Feed-->
<div class="col col-start-2 mr-6 my-4 md:my-8">
    <!-------------------------------------------------Moments Input-->
    <div class="max-w-6xl">
        <div class="flex items-center justify-between">
            <h1 class="hide-for-mobile md:text-2xl font-bold text-white">Let's Explore Moments Around You...</h1>
            <h1 class="hide-for-desktop md:text-2xl text-base font-bold text-white">Let's Explore Moments...</h1>
        </div>
        <div class="mt-4">
            <div class="max-w-4xl px-5 pb-5 pt-3 md:px-10 md:py-6 bg-white rounded-lg shadow-md">
                <div class="mt-2"><a href="#" class="text-sm md:text-2xl text-gray-700 font-bold hover:underline">Share
                        Your Moments:</a>
                    <div>
                        <div class="mt-1">
                            <textarea id="post-title" name="about" rows="2"
                                class="p-3 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border-gray-300 rounded-md"
                                placeholder="Title"></textarea>
                        </div>
                        <div class="mt-0">
                            <textarea id="post-body" name="about" rows="4"
                                class="p-3 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border-gray-300 rounded-md"
                                placeholder="Moment I want to share..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="flex justify-between items-center mt-4">
                    <div>
                        <button type="submit" id="post-button">
                            <a href="#"
                                class="px-2 py-1 bg-gray-600 text-gray-100 font-bold rounded hover:bg-gray-500">Share!</a>
                            </a>
                        </button>
                    </div>

                </div>
            </div>
        </div>
        {{#each result}}
        {{> moments/moment-block }}
        {{/each}}

        <div class="">
            <div id="newsResults"></div>
        </div>


        <div class="px-6 pt-2">
            <div class="container mx-auto">
                <div class="w-full lg:w-8/12">
                    <div class="py-5 pt-10 px-40 flex items-center justify-self-center">
                        <button id="searchbtn"
                            class="block w-full py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-blue-700 rounded shadow ripple hover:shadow-lg hover:bg-yellow-900 focus:outline-none">
                            News
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-start-3 px-8"></div>
</div>